<div class="container-fluid justify-content-center float-right">
  <div class="container-fluid mt-5 col-10 col-md-4 text-center bg-white rounded  p-3">
    <h2>Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field mb-3">
        <%= f.label :email, class: "form-label" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="field mb-3">
        <%= f.label :password, class: "form-label" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field mb-3">
          <%= f.check_box :remember_me, class: "form-label" %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions mb-3">
        <%= f.submit "Log in" , class: "btn btn-dark"%>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>