<p id="notice"><%= notice %></p>

<div class="container-fluid justify-content-center">

  <div class="container col-2">
    <h1 style="min-width:200px;">My Items</h1>
    <%= button_to 'Sell New Item', new_item_path, class:"btn btn-primary", method: :get %>
  </div>

  <div class="row row-cols-1 row-cols-md-2 g-3 justify-content-center">
      <% @items.each do |item| %>
        <% if user_signed_in?  && current_user.items.include?(item) %>
          <div class="card mb-3 m-2" style="max-width: 540px; min-width:200px ">
              <div class="row">
                  <div class="col-md-4">
                      <img src="..." alt="...">
                  </div>
                  <div class="col-md-8">
                      <div class="card-body">
                          <h5 class="card-title"><%= item.description %></h5>
                          <p class="card-text"><%= item.price %></p>
                          <p class="card-text"><%= item.condition %></p>
                          <p class="card-text"><small class="text-muted">Posted <%= time_ago_in_words(item.created_at) %> ago.</small></p>
                          <%= link_to 'View', item , class: "btn btn-primary"%>
                          <%= link_to 'Edit', edit_item_path(item), class:"btn btn-warning" %>
                          <%= link_to 'Delete', item, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %>
                      </div>
                  </div>
              </div>
          </div>
        <% end %>
      <% end %>
  </div>
</div>