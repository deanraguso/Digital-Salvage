<p>
  <strong>Seller:</strong>
  <%= @item.user.email %>
</p>

<div>
  <% @item.images.each do |photo| %>
    <%= image_tag(photo, :width => 200) %>
  <% end %>
</div>

<p>
  <strong>Price:</strong>
  <%= @item.price %>
</p>

<p>
  <strong>Condition:</strong>
  <%= @item.condition %>
</p>

<p>
  <strong>Description:</strong>
  <%= @item.description %>
</p>

<p>
  <strong>Availability: </strong>
  <%= @item.status ? "Available" : "Sold" %>
</p>

<% if user_signed_in?  && current_user.items.include?(@item) %>
  <br>
  <%= link_to 'Edit', edit_item_path(@item) %> |
<% elsif user_signed_in?%>

  <% if @item.status %>
    <button type="button" data-stripe="payment">Purchase</button>
    <script src="https://js.stripe.com/v3/"></script>
    <script>
      document.querySelector("[data-stripe='payment']").addEventListener("click", ()=>{
        console.log("Item.status == <%= @item.status %>: Cannot Proceed")
        if("<%= @item.status %>" == "true"){
          const stripe = Stripe("<%= Rails.application.credentials.dig(:stripe, :public_key) %>");

          stripe.redirectToCheckout({
            sessionId: "<%= @session.id %>"
          });
        }
      });
    </script>
  <% end %>

  <%= link_to "Message Seller",inboxes_path(inbox: {recipient_email: @item.user.email}), method: :post %>
<% end %>

<%= link_to 'Back', :back %>