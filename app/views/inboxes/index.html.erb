<p id="notice"><%= notice %></p>

<h1>Inbox</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @inboxes.each do |inbox| %>
    <%# Add Admin user here to see all messages! %>
      <% if inbox.users.include? current_user %>
        <tr>
          <td>
            <% inbox.users.each do |u| %>
              <% if u != current_user%>
                <%= u.email %>
              <% end %>
            <% end %>
          </td>
          <td>
            <% if inbox.messages.count > 0 %>
              <%= time_ago_in_words(inbox.messages.reduce(0) {|acc, m| m.created_at > acc ? m.created_at : acc}) %> ago
            <% else %>
              <%= "No Messages Sent." %>
            <% end %>
          </td>
          <td><%= link_to 'Show', inbox %></td>
          <td><%= link_to 'Destroy', inbox, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Inbox', new_inbox_path %>
