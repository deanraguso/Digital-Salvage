
<h1>Addresses</h1>

<table>
  <thead>
    <tr>
      <th>Country</th>
      <th>State</th>
      <th>Postal code</th>
      <th>Street address</th>
      <th>Premise</th>
      <th>Sub premise</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.country %></td>
        <td><%= address.state %></td>
        <td><%= address.postal_code %></td>
        <td><%= address.street_address %></td>
        <td><%= address.premise %></td>
        <td><%= address.sub_premise %></td>
        <td><%= link_to 'Show', address %></td>
        <td><%= link_to 'Edit', edit_address_path(address) %></td>
        <td><%= link_to 'Destroy', address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Address', new_address_path %>
