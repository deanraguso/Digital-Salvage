<div class="container-fluid">
    <div class="row justify-content-start">
        <div class="col-8">
            <ul class="list-group list-group-horizontal">
                <li class="list-group-item"><%= link_to "Home", root_path %></li>
                <li class="list-group-item"><%= link_to "Search Items", item_search_path %></li>
        <% if user_signed_in?%>
                <li class="list-group-item"><%= link_to "My Items", items_path %></li>
                <li class="list-group-item"><%= link_to "Inbox", inboxes_path %></li>
                <li class="list-group-item"><%= link_to "Edit Account", edit_user_registration_path(current_user.address_id) %></li>
            </ul>
        </div>
        <div class="col-4">
            <ul class="list-group list-group-horizontal">
                <li class="list-group-item"><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></li>
            </ul>
        </div>
        <% else %>
            </ul>
        </div>
        <div class="col-4">
            <ul class="list-group list-group-horizontal">
                <li class="list-group-item"><%= link_to "Sign In", new_user_session_path %></li>
                <li class="list-group-item"><%= link_to "Sign Up", new_user_registration_path %></li>
            </ul>
        </div>
        <% end %>
    </div>
</div>